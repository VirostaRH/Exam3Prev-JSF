<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" 
        xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
        <listener>
           <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
        </listener>
        <welcome-file-list> 
          <welcome-file>index.xhtml</welcome-file> 
        </welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
 
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>index.xhtml</url-pattern>
		<url-pattern>altaAlumno.xhtml</url-pattern>
		<url-pattern>bajaAlumno.xhtml</url-pattern>
		<url-pattern>actualizarAlumno.xhtml</url-pattern>
		<url-pattern>listar.xhtml</url-pattern>
		<url-pattern>altaPregunta.xhtml</url-pattern>
		<url-pattern>bajaPregunta.xhtml</url-pattern>
		<url-pattern>actualizarPregunta.xhtml</url-pattern>
		<url-pattern>listaPreguntas.xhtml</url-pattern>

	</servlet-mapping>
</web-app>
